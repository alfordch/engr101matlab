name: Verify include script has been run

on:
  push:
    branches: [ master ]
  pull_request:
    branches: [ master ]

jobs:
  build:

    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v2
    - name: Check Dynamic Pages
    - run: npm run include
    - run: git diff --name-only --exit-code
